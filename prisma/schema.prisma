// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // Prisma 7에서는 url을 prisma.config.ts로 이동
}

model LandingContent {
  id        String   @id @default("default")
  content   Json     // LandingContent 타입의 JSON 데이터
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("landing_content")
}

model DocsContent {
  id        String   @id @default("default")
  content   Json     // DocsContent 타입의 JSON 데이터
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@map("docs_content")
}

model DocDocument {
  id          String   @id @default(uuid())
  slug        String   @unique  // URL 경로 (예: "getting-started", "api-reference")
  title       String
  description String?
  content     Json     // DocsArticle 타입의 JSON 데이터
  order       Int      @default(0)  // 정렬 순서
  published   Boolean  @default(true)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  @@map("doc_documents")
}
